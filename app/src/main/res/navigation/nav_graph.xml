<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/viewPagerFragment">

    <fragment
        android:id="@+id/vehicleDetailFragment2"
        android:name="com.example.searchvehicleapp.ui.vehicle.detailfragments.VehicleDetailFragment"
        android:label="fragment_vehicle_detail"
        tools:layout="@layout/fragment_vehicle_detail">

        <action
            android:id="@+id/action_vehicleDetailFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:popUpTo="@id/viewPagerFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/vehicleDetailFragment"
        android:name="com.example.searchvehicleapp.ui.vehicle.detailfragments.VehicleDetailFragment"
        android:label="fragment_vehicle_detail"
        tools:layout="@layout/fragment_vehicle_detail">

        <argument
            android:name="vehicle_id"
            app:argType="integer" />

        <action
            android:id="@+id/action_vehicleDetailFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:popUpTo="@id/viewPagerFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.searchvehicleapp.ui.vehicle.viewpagerfragment.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager">

        <action
            android:id="@+id/action_viewPagerFragment_to_vehicleDetailFragment"
            app:destination="@id/vehicleDetailFragment" />

        <action
            android:id="@+id/action_viewPagerFragment_to_vehicleDetailFragment2"
            app:destination="@id/vehicleDetailFragment2" />

    </fragment>
</navigation>